{
	"name": "@zilero/gulp-pug-compiler",
	"version": "1.0.1",
  "type": "module",
	"description": "A Gulp plugin for compiling Pug templates to HTML with support for layouts, includes, and custom options",
	"author": {
		"name": "Artemev Alexandr",
		"url": "https://github.com/Zilero232"
	},
	"license": "MIT",
	"homepage": "https://github.com/Zilero232/gulp-plugins-hub",
	"repository": {
		"type": "git",
		"url": "https://github.com/Zilero232/gulp-plugins-hub"
	},
	"bugs": {
		"url": "https://github.com/Zilero232/gulp-plugins-hub/issues"
	},
	"keywords": [
		"gulp",
		"plugin",
		"pug",
		"template",
		"compiler",
		"html",
		"jade",
		"preprocessor",
		"templating",
		"static-site"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.cts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rimraf dist",
		"type-check": "tsc --noEmit",
		"lint": "eslint src/**/*.ts"
	},
	"engines": {
		"node": ">= 16.0"
	},
	"dependencies": {
		"@zilero/gulp-plugin-factory": "workspace:*",
		"pug": "^3.0.3"
	},
	"devDependencies": {
		"@types/pug": "^2.0.10"
	},
	"publishConfig": {
		"access": "public"
	},
	"peerDependencies": {
		"gulp": "^4.0.0"
	}
}
