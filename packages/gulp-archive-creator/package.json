{
  "name": "@zilero/gulp-archive-creator",
  "version": "1.0.2",
  "type": "module",
  "description": "A Gulp plugin for creating archives (zip, tar) from vinyl file streams with configurable compression options",
  "author": {
    "name": "Artemev Alexandr",
    "url": "https://github.com/Zilero232"
  },
  "license": "MIT",
  "homepage": "https://github.com/Zilero232/gulp-plugins-hub",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zilero232/gulp-plugins-hub"
  },
  "bugs": {
    "url": "https://github.com/Zilero232/gulp-plugins-hub/issues"
  },
  "keywords": [
    "gulp",
    "plugin",
    "archive",
    "zip",
    "tar",
    "compression",
    "archiver",
    "vinyl",
    "stream",
    "bundle",
    "package",
    "compress"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts"
  },
  "engines": {
    "node": ">= 16.0"
  },
  "dependencies": {
    "@zilero/gulp-plugin-factory": "workspace:*",
    "archiver": "^7.0.1",
    "concat-stream": "^2.0.0",
    "vinyl": "^3.0.1",
    "zod": "^3.25.76",
    "chalk": "5.4.1",
		"consola": "^3.4.2",
		"pretty-error": "^4.0.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/concat-stream": "^2.0.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "gulp": "^4.0.0"
  }
}
