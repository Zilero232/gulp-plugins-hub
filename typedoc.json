{
  "$schema": "https://typedoc.org/schema.json",
  "name": "Gulp Plugins Hub",
  "entryPointStrategy": "packages",
  "entryPoints": ["packages/*"],
  "packageOptions": {
    "entryPoints": ["src/index.ts"]
  },
  "includeVersion": true,
  "hideGenerator": true,
  "theme": "default",
  "readme": "README.md",

  // Plugins
  "plugin": [
    "typedoc-material-theme"
  ],

  // Output
  "out": "docs",

  // Categorization and sorting
  "categorizeByGroup": true,
  "categoryOrder": ["Plugins", "Utils", "Types", "Configs", "*"],
  "sort": ["source-order", "required-first", "alphabetical"],

  // Display settings
  "visibilityFilters": {
    "protected": false,
    "private": false,
    "inherited": true,
    "external": true
  },
  "searchInComments": true,
  "githubPages": true,

  // Navigation
  "navigationLinks": {
    "GitHub": "https://github.com/Zilero232/gulp-plugins-hub",
    "NPM": "https://www.npmjs.com/org/zilero",
    "Changelog": "CHANGELOG.md",
    "Contributing": "CONTRIBUTING.md"
  },

  // Additional settings
  "cleanOutputDir": true,
  "excludeInternal": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "disableSources": true,
  "gitRevision": "master",

  "validation": {
    "notExported": true,
    "invalidLink": true,
    "notDocumented": true
  }
}
